# Environment variables for the Convenings project
# Copy this file to .env and fill in your values

# OpenRouter API key (required for examples and workflows using LLMs)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Default model to use with OpenRouter (optional, defaults vary by component)
# OPENROUTER_DEFAULT_MODEL=openai/gpt-4o

# OpenRouter fallback models (optional, comma-separated list)
# OPENROUTER_FALLBACK_MODELS=anthropic/claude-3-opus,anthropic/claude-3-sonnet

# Temperature setting for LLM requests (optional, defaults to 0.7)
# OPENROUTER_TEMPERATURE=0.7

# Maximum tokens to generate (optional)
# OPENROUTER_MAX_TOKENS=1024

# Debug mode (optional, set to true to enable debug logging)
# DEBUG=false
